.scroll-view-header {
  white-space: nowrap;
  display: flex;
  justify-content: space-around;
}

.scroll-header-item-wraper {
  display: inline-flex;
  padding: 15rpx 30rpx;
  font-size: 30rpx;
  color: #666666;
}

.title-selected {
  color: #2d80ff;
  border-bottom: 4rpx solid #2d80ff;
}

.swiper-box {
  display: block;
  height: 100%;
  width: 100%;
  overflow: hidden;
}

.swiper-box view {
  text-align: center;
}

image {
  width: 100%;
}