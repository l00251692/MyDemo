page{
  height: 100vh;
  position: absolue;
}

.swiper-tab{
  position: fixed;
  top: 0;
  background-color: transparent;
  height: 80rpx;
  z-index: 50;
}

.scroll-view-header {
  white-space: nowrap;
  display: flex;
  justify-content: space-around;
  padding-left:20rpx;
  z-index: 50;

}

.scroll-header-item-wraper {
  display: inline-flex;
  padding: 15rpx 30rpx;
  font-size: 30rpx;
  color: #666666;
  z-index: 50;
}

.title-selected {
  color: #2d80ff;
  border-bottom: 4rpx solid #2d80ff;
}

.swiper-box {
  display: block;
  height: 100%;
  width: 100%;
  overflow: hidden;
  padding-top:80rpx;
  position: fixed;
  top: 0;
}

.swiper-item{
  height: 100%;
}

.scroll-view-item{
  width: 100%;
  height: 100%;
}

.list-item{
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top:20rpx;
}

.list-item-image{
  width: 100%;
  padding: 0;
}

.list-item-info{
  width: 100%;
  text-align: center;
  height: 80rpx;
  position: absolute;
  bottom: 10rpx;
}

.list-item-text{
  color: #fff;
  font-size: 32rpx;
  line-height: 40rpx;
}





.service{
  width: 100%;
  height: 200rpx;
  position: relative;
}

.service image{
  width: 100%;
  height: 200rpx;
}

.phone{
  border-radius: 4rpx;
  z-index: 20;
  position: absolute;
  background-color: #cd543c;
  text-align:center;
  top:50rpx;
  left: 60rpx;
  width: 300rpx;
  height: 60rpx;
  font-size: 32rpx;
  line-height: 60rpx;
}
.phone text{
  color: #fff;
}

.concat{
  border-radius: 4rpx;
  z-index: 20;
  position: absolute;
  background-color: #028760;
  text-align:center;
  top:50rpx;
  left: 390rpx;
  width: 300rpx;
  height: 60rpx;
}

.concat button{
  border: none;
  background-color:  #028760;
  width: 300rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 32rpx;
  color: #fff;
}

.concat button::after{
  border: none;
}

.copyright{
  font-size: 24rpx;
  color: #fff;
  position: absolute;
  bottom: 10rpx;
  text-align: center;
  width: 100%;
}