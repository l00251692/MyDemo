page{
    background-color: #ffffff;
    font-family: "Helvetica Neue","Hiragino Sans GB","Microsoft YaHei","\9ED1\4F53",Arial,sans-serif;
    font-size: 32rpx;
}

swiper {
    height: 421.5rpx;
}
swiper-item image {
    width: 100%;
    height: 100%;
}

.select-title{
    width: 100%;
    padding:30rpx 0;
    text-align: center;
    display:flex;
    flex-direction:column;
    align-items:center;
}

.titel_text{
  font-size: 34rpx;
  color: #7bcfa6;
  opacity:0.8;
}

.titel_text_tip{
  font-size: 24rpx;
  color: #000;
  opacity:0.5;
  padding-top: 10rpx;
}

.content{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.select-top{
    width: 100%;
    height: 300rpx;
    display:flex;
    flex-direction: row;
    margin-bottom: 10rpx;
}

.select-top-small-left{
    width: 360rpx;
    height: 280rpx;
    flex:1;
    padding-left:10rpx;
    position:relative;
}

.select-top-small-right{
    width: 360rpx;
    height: 280rpx;
    flex:1;
    position:relative;
}

.item_image{
    display: block;
    width: 360rpx;
    height: 260rpx;
}

.item_title-left{
  border-radius: 10rpx;
  z-index: 20;
  position: absolute;
  background-color: #7bcfa6;
  text-align:center;
  top:10rpx;
  left: 20rpx;
}

.item_title-left text{
  color: #fff;
  overflow: hidden;
  padding:6rpx 10rpx;
  font-size: 30rpx;
  line-height: 30rpx;
}

.item_title-right{
  border-radius: 10rpx;
  z-index: 20;
  position: absolute;
  background-color: #7bcfa6;
  text-align:center;
  top:10rpx;
  left: 10rpx;
}

.item_title-right text{
  color: #fff;
  overflow: hidden;
  padding:6rpx 10rpx;
  font-size: 30rpx;
  line-height: 30rpx;
}

.service{
  width: 100%;
  height: 200rpx;
  position: relative;
}

.service image{
  width: 100%;
  height: 200rpx;
}

.phone{
  border-radius: 4rpx;
  z-index: 20;
  position: absolute;
  background-color: #cd543c;
  text-align:center;
  top:50rpx;
  left: 60rpx;
  width: 300rpx;
  height: 60rpx;
  font-size: 32rpx;
  line-height: 60rpx;
}
.phone text{
  color: #fff;
}

.concat{
  border-radius: 4rpx;
  z-index: 20;
  position: absolute;
  background-color: #028760;
  text-align:center;
  top:50rpx;
  left: 390rpx;
  width: 300rpx;
  height: 60rpx;
}

.concat button{
  border: none;
  background-color:  #028760;
  width: 300rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 32rpx;
  color: #fff;
}

.concat button::after{
  border: none;
}

.copyright{
  font-size: 24rpx;
  color: #fff;
  position: absolute;
  bottom: 10rpx;
  text-align: center;
  width: 100%;
}
